<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="EventCandyCandyBags\Core\Checkout\Cart\CandyBagsCartProcessor" public="true">
            <argument type="service" id="Shopware\Core\Content\Product\Cart\ProductGateway"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>

            <!-- inject before product processor (5000) -->
            <tag name="shopware.cart.processor" priority="6000"/>
            <tag name="shopware.cart.collector" priority="6000"/>
        </service>

        <service id="EventCandyCandyBags\Core\Checkout\Cart\CandyBagsSubProductCartReducer">
            <tag name="ec.sets.cart_reducer"/>
        </service>

        <!-- LineItemFactory -->
        <service id="EventCandyCandyBags\Core\Checkout\Cart\CandyBagsLineItemFactory">
            <argument type="service" id="Shopware\Core\Checkout\Cart\PriceDefinitionFactory"/>
            <tag name="shopware.cart.line_item.factory"/>
        </service>

        <!-- Controller -->
        <service id="EventCandyCandyBags\Controller\StepSetController" public="true">
            <argument id="Shopware\Storefront\Page\GenericPageLoader" type="service"/>
        </service>

        <service id="EventCandyCandyBags\Controller\ApiController" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="Shopware\Core\Content\Product\Cart\ProductGateway"/>
        </service>

        <!-- SeoUrl -->
        <service id="EventCandyCandyBags\Core\Content\StepSet\StepSetSeoUrlRoute">
            <argument type="service" id="EventCandyCandyBags\Core\Content\StepSet\StepSetDefinition"/>
            <tag name="shopware.seo_url.route"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\StepSet\StepSetSeoUrlListener">
            <argument type="service" id="Shopware\Core\Content\Seo\SeoUrlUpdater"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Store Api Routes -->
        <service id="EventCandyCandyBags\Core\Content\StepSet\SalesChannel\StepSetRoute" public="true">
            <argument type="service" id="eccb_step_set.repository"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\StepSet\SalesChannel\Detail\StepSetDetailRoute" public="true">
            <argument type="service" id="eccb_step_set.repository"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\TreeNode\SalesChannel\Listing\TreeNodeListingRoute" public="true">
            <argument type="service" id="eccb_tree_node.repository"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\TreeNode\SalesChannel\Detail\TreeNodeDetailRoute" public="true">
            <argument type="service" id="eccb_tree_node.repository"/>
            <argument type="service" id="eccb_tree_node_item_set.repository"/>
            <argument type="service" id="EventCandy\Sets\Storefront\Page\Product\Subscriber\ProductListingSubscriber"/>
        </service>



        <!-- Core/Content -->
        <service id="EventCandyCandyBags\Core\Content\StepSet\StepSetDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step_set"/>
        </service>

        <service
                id="EventCandyCandyBags\Core\Content\StepSet\Aggregate\StepSetTranslation\StepSetTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step_set_translation"/>
        </service>


        <service id="EventCandyCandyBags\Core\Content\ItemSet\ItemSetDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item_set"/>
        </service>


        <service id="EventCandyCandyBags\Core\Content\Item\ItemDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item"/>
        </service>


        <service id="EventCandyCandyBags\Core\Content\TreeNode\TreeNodeDefinition">
            <tag name="shopware.entity.definition" entity="eccb_tree_node"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\TreeNode\Aggregate\TreeNodeItemSet\TreeNodeItemSetDefinition">
            <tag name="shopware.entity.definition" entity="eccb_tree_node_item_set"/>
        </service>

        <service
                id="EventCandyCandyBags\Core\Content\TreeNode\Aggregate\TreeNodeTranslation\TreeNodeTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_tree_node_translation"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Item\Aggregate\ItemCard\ItemCardDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item_card"/>
        </service>


        <service
                id="EventCandyCandyBags\Core\Content\Item\Aggregate\ItemCard\ItemCardTranslation\ItemCardTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item_card_translation"/>
        </service>

        <!-- Subscribers -->
        <service id="EventCandyCandyBags\Subscriber\EntityDeletedSubscriber">
<!--            <argument type="service" id="Doctrine\DBAL\Connection"/>-->
<!--            <argument type="service" id="Shopware\Core\Content\Product\ProductDefinition"/>-->
<!--            <argument type="service" id="Shopware\Core\Framework\Adapter\Cache\CacheClearer"/>-->
<!--            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Cache\EntityCacheKeyGenerator"/>-->
<!--            <argument type="service"-->
<!--                      id="labelme.stock-updater-related"/>-->
<!--            <argument type="string">event-candy-label-me</argument>-->
            <tag name="kernel.event_subscriber"/>
        </service>


        <!-- DemoDataService -->

        <service id="EventCandyCandyBags\DemoDataService">
            <argument type="service" id="Shopware\Core\Framework\Api\Controller\SyncController"/>
            <argument type="tagged" tag="eccb.demo_data.data_provider"/>
        </service>

        <!--  DemoDataProviders -->
        <service id="EventCandyCandyBags\DataProvider\DemoDataProvider" abstract="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
        </service>

        <!-- Create Plugin Media Folder and Data -->
        <service id="EventCandyCandyBags\DataProvider\BaseMediaProvider">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
            <argument type="service" id="media_folder.repository"/>
            <argument type="service" id="media_folder_configuration.repository"/>

            <tag name="eccb.demo_data.data_provider" priority="1100"/>
        </service>

        <!-- Commands  -->
        <service id="EventCandyCandyBags\Commands\EccbCommands">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>

    </services>
</container>