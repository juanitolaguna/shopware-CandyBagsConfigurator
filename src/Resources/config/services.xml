<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Core/Content -->
        <service id="EventCandyCandyBags\Core\Content\StepSet\StepSetDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step_set"/>
        </service>

        <service
                id="EventCandyCandyBags\Core\Content\StepSet\Aggregate\StepSetTranslation\StepSetTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step_set_translation"/>
        </service>


        <service id="EventCandyCandyBags\Core\Content\ItemSet\ItemSetDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item_set"/>
        </service>


        <service id="EventCandyCandyBags\Core\Content\Item\ItemDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item"/>
        </service>


        <service id="EventCandyCandyBags\Core\Content\TreeNode\TreeNodeDefinition">
            <tag name="shopware.entity.definition" entity="eccb_tree_node"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\TreeNode\Aggregate\TreeNodeItemSet\TreeNodeItemSetDefinition">
            <tag name="shopware.entity.definition" entity="eccb_tree_node_item_set"/>
        </service>

        <service
                id="EventCandyCandyBags\Core\Content\TreeNode\Aggregate\TreeNodeTranslation\TreeNodeTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_tree_node_translation"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Item\Aggregate\ItemCard\ItemCardDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item_card"/>
        </service>


        <service
                id="EventCandyCandyBags\Core\Content\Item\Aggregate\ItemCard\ItemCardTranslation\ItemCardTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_item_card_translation"/>
        </service>

        <!-- Subscribers -->
        <service id="EventCandyCandyBags\Subscriber\EntityDeletedSubscriber">
<!--            <argument type="service" id="Doctrine\DBAL\Connection"/>-->
<!--            <argument type="service" id="Shopware\Core\Content\Product\ProductDefinition"/>-->
<!--            <argument type="service" id="Shopware\Core\Framework\Adapter\Cache\CacheClearer"/>-->
<!--            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Cache\EntityCacheKeyGenerator"/>-->
<!--            <argument type="service"-->
<!--                      id="labelme.stock-updater-related"/>-->
<!--            <argument type="string">event-candy-label-me</argument>-->
            <tag name="kernel.event_subscriber"/>
        </service>


        <!-- DemoDataService -->

        <service id="EventCandyCandyBags\DemoDataService">
            <argument type="service" id="Shopware\Core\Framework\Api\Controller\SyncController"/>
            <argument type="tagged" tag="eccb.demo_data.data_provider"/>
        </service>

        <!--  DemoDataProviders -->
        <service id="EventCandyCandyBags\DataProvider\DemoDataProvider" abstract="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
        </service>

        <!-- Create Plugin Media Folder and Data -->
        <service id="EventCandyCandyBags\DataProvider\BaseMediaProvider">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
            <argument type="service" id="media_folder.repository"/>
            <argument type="service" id="media_folder_configuration.repository"/>

            <tag name="eccb.demo_data.data_provider" priority="1100"/>
        </service>

        <!-- Commands  -->
        <service id="EventCandyCandyBags\Commands\EccbCommands">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="media_folder.repository"/>
            <tag name="console.command"/>
        </service>

    </services>
</container>