<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="EventCandyCandyBags\Core\Content\CandyBag\CandyBagDefinition">
            <tag name="shopware.entity.definition" entity="eccb_candy_bag"/>
        </service>

        <service
                id="EventCandyCandyBags\Core\Content\CandyBag\Aggregate\CandyBagTranslation\CandyBagTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_candy_bag_translation"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Card\CardDefinition">
            <tag name="shopware.entity.definition" entity="eccb_card"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Card\Aggregate\CardTranslation\CardTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_card_translation"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Step\StepDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Step\Aggregate\StepTranslation\StepTranslationDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step_translation"/>
        </service>

        <service id="EventCandyCandyBags\Core\Content\Step\Aggregate\StepProduct\StepProductDefinition">
            <tag name="shopware.entity.definition" entity="eccb_step_product"/>
        </service>


        <!-- DemoDataService -->

        <service id="EventCandyCandyBags\DemoDataService">
            <argument type="service" id="Shopware\Core\Framework\Api\Controller\SyncController"/>
            <argument type="tagged" tag="eccb.demo_data.data_provider"/>
        </service>

        <!--  DemoDataProviders -->
        <service id="EventCandyCandyBags\DataProvider\DemoDataProvider" abstract="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
        </service>

        <!-- Create Plugin Media Folder and Data -->
        <service id="EventCandyCandyBags\DataProvider\BaseMediaProvider">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
            <argument type="service" id="media_folder.repository"/>
            <argument type="service" id="media_folder_configuration.repository"/>

            <tag name="eccb.demo_data.data_provider" priority="1100"/>
        </service>

        <!-- Commands  -->
        <service id="EventCandyCandyBags\Commands\EccbCommands">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="media_folder.repository"/>
            <tag name="console.command"/>
        </service>

    </services>
</container>